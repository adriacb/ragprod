# Database Configuration
DB_TYPE=weaviate  # Using external Weaviate
DB_MODE=remote

# Weaviate Cloud Configuration
WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key-here
WEAVIATE_COLLECTION_NAME=ragprod_production

# Or for self-hosted Weaviate
# WEAVIATE_URL=http://weaviate.example.com:8080
# WEAVIATE_GRPC_PORT=50051

# Embedding Model Configuration
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL_NAME=jinaai/jina-code-embeddings-0.5b
EMBEDDING_DEVICE=cpu
EMBEDDING_DTYPE=bfloat16

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4
FASTAPI_RELOAD=False
FASTAPI_ACCESS_LOG=True
FASTAPI_API_PREFIX=/api
FASTAPI_API_TITLE=RAGProd API
FASTAPI_API_DESCRIPTION=API for RAGProd
FASTAPI_API_VERSION=0.1.0

# Logging
LOG_LEVEL=WARNING
